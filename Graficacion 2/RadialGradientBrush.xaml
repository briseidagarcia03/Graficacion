<Window x:Class="Graficacion_2.RadialGradientBrush"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion_2"
        mc:Ignorable="d"
        Title="RadialGradientBrush" Height="450" Width="800">
    <Canvas>
        <Rectangle Width="400" Height="400">
            <Rectangle.Fill>
                <RadialGradientBrush Center=".5,.5" RadiusX="1" RadiusY="1" GradientOrigin=".5,.5">
                    <GradientStop Color="blue" Offset="0.10"></GradientStop>
                    <GradientStop Color="Purple" Offset="0.20"></GradientStop>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Canvas>
</Window>
