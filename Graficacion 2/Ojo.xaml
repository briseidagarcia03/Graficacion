<Window x:Class="Graficacion_2.Ojo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion_2"
        mc:Ignorable="d"
        Title="Ojo" Height="450" Width="800">
    <Canvas>
        <Ellipse Width="300" Height="300" Canvas.Left="240" Canvas.Top="60" Fill="LightGray"></Ellipse>
        <Ellipse Width="140" Height="140" Canvas.Left="320" Canvas.Top="140">
            <Ellipse.Fill>
                <RadialGradientBrush Center=".5,.5" RadiusX="1" RadiusY="1" GradientOrigin=".5,.5">
                    <GradientStop Color="Black" Offset="0.20"></GradientStop>
                    <GradientStop Color="MediumPurple" Offset=".30"></GradientStop>
                    <GradientStop Color="Purple" Offset=".50"></GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="30" Height="30" Fill="White" Canvas.Left="350" Canvas.Top="170"></Ellipse>
    </Canvas>
</Window>
