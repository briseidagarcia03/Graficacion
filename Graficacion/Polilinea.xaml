<Window x:Class="Graficacion.Polilinea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graficacion"
        mc:Ignorable="d"
        Title="Polilinea" Height="450" Width="800">
    <Canvas>
        <Polyline Stroke="DeepPink" StrokeThickness="2" 
           Points="5,5,105,5,105,105,5,105,5,5" Fill="HotPink" Opacity="0.3"></Polyline>
        <Polyline Canvas.Top="20" Canvas.Left="20" Stroke="Blue" StrokeThickness="2" 
           Points="5,5,105,5,105,105,5,105,5,5" Fill="Purple" Opacity="0.3"></Polyline>
        <Polyline Canvas.Top="20" Canvas.Left="200" StrokeStartLineCap="Round"
            Points="5,5,105,5,105,105 5,105 5,40,50,40" Stroke="Blue" StrokeThickness="4"></Polyline>
        <Polyline Canvas.Top="20" Canvas.Left="400" StrokeStartLineCap="Round" StrokeDashArray="2,3,1"
            Points="5,5,105,5,105,105 5,105 5,40,50,40" Stroke="Black" StrokeThickness="4"></Polyline>
    </Canvas>
</Window>
